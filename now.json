{
  "version": 2,
  "name": "tomhendra-portfolio",
  "build": {
    "env": {
      "GATSBY_SANITY_PROJECT_ID": "@sanity_project_id",
      "GATSBY_SANITY_DATASET": "@sanity_project_dataset",
      "SANITY_READ_TOKEN": "@sanity_read_token"
    }
  },
  "builds": [
    {
      "src": "web/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "public" }
    },
    {
      "src": "studio/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "^/static/favicon.ico", "dest": "/studio/static/favicon.ico" },
    { "src": "^/studio/static/(.*)", "dest": "/studio/static/$1" },
    { "src": "^/studio/(.*)", "dest": "/studio/index.html" },
    { "src": "^/(.*)", "dest": "/web/$1" }
  ]
}

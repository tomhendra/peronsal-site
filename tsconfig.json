{
  "compilerOptions": {
    "strict": true, // embrace TS
    "allowJs": true, // check JS files
    "noEmit": true, // do not compile to JS (Next handles this via Babel)
    "skipLibCheck": true, // node_modules not checked
    "jsx": "preserve", // Next auto-inserts
    "jsxImportSource": "@emotion/react",
    "target": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".", // required for path imports to work
    "paths": {
      "@components": ["components/"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks/"],
      "@hooks/*": ["hooks/*"],
      "@lib": ["lib/"],
      "@lib/*": ["lib/*"],
      "@test/": ["test/"],
      "@test/*": ["test/*"],
      "@theme/": ["theme/"],
      "@theme/*": ["theme/*"],
      "@types": ["types/"],
      "@types/*": ["types/*"]
    }
  },
  // *.* includes config files in root because https://stackoverflow.com/a/61993196
  "include": [
    "*.*",
    "components/**/*",
    "content/**/*",
    "hooks/**/*",
    "lib/**/*",
    "pages/**/*",
    "test/**/*",
    "theme/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}

{
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm validate && vite build",
    "preview": "vite preview",
    "lint": "eslint --ignore-path .gitignore",
    "lint:fix": "pnpm lint --fix",
    "prettier": "prettier --ignore-path .gitignore \"/**/*.+(js|json|ts|tsx|md)\"",
    "format": "pnpm prettier --write",
    "format:check": "pnpm prettier --list-different",
    "validate": "pnpm run-p lint format:check type:check",
    "postinstall": "pnpm husky"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.+(json|md|mdx)": [
      "prettier --write"
    ],
    "*": [
      "secretlint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@flydotio/dockerfile": "^0.5.9",
    "@secretlint/secretlint-rule-preset-recommend": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "secretlint": "^9.0.0",
    "vite": "^6.0.6"
  },
  "dependencies": {
    "typescript": "^5.7.2"
  }
}

{
  "name": "tomhendra-portfolio",
  "version": "2.0.0",
  "private": true,
  "description": "Portfolio website for Tom Hendra, web developer",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "keywords": [
    "tom hendra"
  ],
  "license": "MIT",
  "repository": "https://github.com/tomhendra/portfolio",
  "engines": {
    "node": "10.x"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test",
    "deploy:graphql": "lerna run --scope backend deploy:graphql",
    "deploy:sanity": "lerna run --scope backend deploy:sanity",
    "export:sanity": "lerna run --scope backend export",
    "clean:cache": "lerna run --scope frontend clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rm -rf node_modules",
    "clean:all": "yarn clean:cache && yarn clean:workspaces && yarn clean:root",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn bootstrap"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "eslint": "6.6.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "1.7.0",
    "husky": "3.0.9",
    "lerna": "3.18.4",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{frontend,backend}/**/*.js": [
      "prettier --write --ignore-path .gitignore",
      "eslint --fix --quiet --ignore-path .gitignore",
      "git add"
    ]
  }
}

{
  "name": "personal-site",
  "version": "2.0.0-alpha.0",
  "license": "ISC",
  "description": "Blog and Portfolio for Tom Hendra",
  "repository": "https://github.com/tomhendra/personal-site.git",
  "author": "Tom Hendra",
  "main": "next.config.js",
  "scripts": {
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:report": "open coverage/lcov-report/index.html -a 'Google Chrome Dev'",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "dev": "next",
    "dev:watch": "next-remote-watch ./content",
    "build": "next build",
    "start": "next start",
    "lint": "jest --config test/jest.lint.ts",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx|md|mdx)\"",
    "format:check": "yarn prettier --check",
    "format": "yarn prettier --write",
    "type:check": "tsc",
    "validate": "npm-run-all --parallel format:check type:check test build",
    "rm:cache": "rm -rf .next/cache",
    "export": "next export"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "ignorePath": "./.gitignore"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "**/*.+(js|json|ts|tsx|css|md|mdx)": [
      "prettier",
      "jest --findRelatedTests"
    ]
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "fast-glob": "^3.2.4",
    "framer-motion": "^3.1.1",
    "fuse.js": "^6.4.3",
    "github-slugger": "^1.3.0",
    "gray-matter": "^4.0.2",
    "js-cookie": "^2.2.1",
    "next": "^10.0.3",
    "next-cookies": "^2.0.3",
    "next-mdx-remote": "^1.0.1",
    "next-remote-watch": "^0.3.0",
    "next-seo": "^4.17.0",
    "prism-react-renderer": "^1.1.1",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "reading-time": "^1.2.1",
    "theme-ui": "^0.5.0-alpha.1",
    "use-cloudinary": "^4.1.0"
  },
  "devDependencies": {
    "@emotion/jest": "^11.1.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/ramda": "^0.27.34",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "hasha": "^5.2.2",
    "husky": "^4.3.6",
    "is-ci-cli": "^2.1.2",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.3",
    "node-cache": "^5.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}

{
  "name": "tomhendra-portfolio",
  "version": "2.0.0",
  "private": true,
  "description": "Portfolio website for Tom Hendra, web developer",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "keywords": [
    "tom hendra"
  ],
  "license": "MIT",
  "repository": "https://github.com/tomhendra/portfolio",
  "engines": {
    "node": "12.x"
  },
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test",
    "deploy:graphql": "cd studio && yarn deploy:graphql",
    "deploy:sanity": "cd studio && yarn deploy:sanity",
    "export:sanity": "lerna run --scope studio export",
    "clean:cache": "lerna run --scope web clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rm -rf node_modules",
    "clean:all": "yarn clean:cache && yarn clean:workspaces && yarn clean:root",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn bootstrap",
    "setup": "yarn install && yarn postinstall"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.18.0",
    "eslint-plugin-react-hooks": "1.7.0",
    "husky": "4.0.10",
    "lerna": "3.20.2",
    "lint-staged": "10.0.0",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{web,studio}/**/*.js": [
      "prettier --write --ignore-path .gitignore",
      "eslint --fix --quiet --ignore-path .gitignore"
    ]
  }
}

{
  "name": "tomhendra-portfolio",
  "version": "4.0.0",
  "private": true,
  "description": "Portfolio website for Tom Hendra, Software Developer",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "keywords": [
    "tom hendra"
  ],
  "license": "MIT",
  "repository": "https://github.com/tomhendra/portfolio",
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "tsc --noEmit && eslint '{web,studio}/**/*.{js,ts,tsx}' --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "deploy:graphql-dev": "lerna run --scope studio deploy:graphql-dev",
    "deploy:graphql-prod": "lerna run --scope studio deploy:graphql-prod",
    "deploy:sanity": "lerna run --scope studio deploy:sanity",
    "clean:cache": "lerna run --scope web clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rimraf node_modules",
    "clean:all": "yarn clean:cache && yarn clean:workspaces && yarn clean:root",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "setup": "yarn install && yarn bootstrap"
  },
  "devDependencies": {
    "@types/facepaint": "^1.2.1",
    "@types/react-helmet": "^6.0.0",
    "@types/node": "14.0.14",
    "@types/react": "16.9.41",
    "@types/react-dom": "16.9.8",
    "@types/yup": "0.29.3",
    "@typescript-eslint/eslint-plugin": "3.4.0",
    "@typescript-eslint/parser": "3.4.0",
    "eslint": "7.3.1",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "4.0.4",
    "husky": "4.2.5",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "typescript": "3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "{web,studio}/**/*.{js,ts,tsx}": "eslint --fix --quiet --ignore-path .gitignore"
  }
}

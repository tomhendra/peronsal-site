{
  "name": "tomhendra-portfolio",
  "version": "4.0.0",
  "private": true,
  "description": "Portfolio website for Tom Hendra, web developer",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "keywords": [
    "tom hendra"
  ],
  "license": "MIT",
  "repository": "https://github.com/tomhendra/portfolio",
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "tsc --noEmit && eslint '{web,studio}/**/*.{js,ts,tsx}' --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "deploy:graphql": "cd studio && yarn deploy:graphql",
    "deploy:sanity": "cd studio && yarn deploy:sanity",
    "export:sanity": "lerna run --scope studio export",
    "clean:cache": "lerna run --scope web clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rm -rf node_modules",
    "clean:all": "yarn clean:cache && yarn clean:workspaces && yarn clean:root",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn bootstrap",
    "setup": "yarn install && yarn postinstall"
  },
  "devDependencies": {
    "@types/facepaint": "^1.2.1",
    "@types/react-helmet": "^5.0.15",
    "@types/node": "13.13.4",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.6",
    "@types/yup": "0.28.0",
    "@typescript-eslint/eslint-plugin": "2.29.0",
    "@typescript-eslint/parser": "2.29.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "4.2.5",
    "lerna": "3.20.2",
    "lint-staged": "10.1.7",
    "prettier": "2.0.5",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "{web,studio}/**/*.{js,ts,tsx}": "eslint --fix --quiet --ignore-path .gitignore"
  },
  "dependencies": {}
}

{
  "name": "personal-site",
  "version": "2.0.0-alpha.0",
  "license": "ISC",
  "description": "Blog and Portfolio for Tom Hendra",
  "repository": "https://github.com/tomhendra/peronsal-site.git",
  "author": "Tom Hendra",
  "main": "next.config.js",
  "scripts": {
    "build": "next build",
    "dev": "next",
    "dev:watch": "next-remote-watch ./content",
    "start": "next start",
    "test": "jest",
    "format": "yarn format:index && yarn format:pages && yarn format:src",
    "format:index": "prettier --write \"*.{js,json,md}\"",
    "format:pages": "prettier --write \"pages/**/*.{js,ts}\"",
    "format:src": "prettier --write \"src/**/*.{js,ts,md,mdx}\"",
    "export": "next export",
    "type:check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext ts --ext tsx --fix",
    "rm:cache": "rm -rf .next/cache"
  },
  "dependencies": {
    "copy-to-clipboard": "^3.3.1",
    "fast-glob": "^3.2.4",
    "fuse.js": "^6.4.3",
    "github-slugger": "^1.3.0",
    "gray-matter": "^4.0.2",
    "next": "^10.0.3",
    "next-mdx-remote": "^1.0.0",
    "next-remote-watch": "^0.2.0",
    "next-seo": "^4.17.0",
    "prism-react-renderer": "^1.1.1",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reading-time": "^1.2.1",
    "theme-ui": "^0.5.0-alpha.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@types/ramda": "^0.27.32",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "hasha": "^5.2.2",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "node-cache": "^5.1.2",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testMatch": [
      "**/tests/*.{js,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/",
      "/.cache/",
      "/dist/"
    ]
  }
}

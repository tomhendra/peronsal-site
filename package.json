{
  "name": "tomhendra-portfolio",
  "version": "3.0.0",
  "private": true,
  "description": "Portfolio website for Tom Hendra, web developer",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "keywords": [
    "tom hendra"
  ],
  "license": "MIT",
  "repository": "https://github.com/tomhendra/portfolio",
  "engines": {
    "node": "12.x"
  },
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "yarn lint --fix",
    "test": "lerna run test",
    "deploy:graphql": "cd studio && yarn deploy:graphql",
    "deploy:sanity": "cd studio && yarn deploy:sanity",
    "export:sanity": "lerna run --scope studio export",
    "clean:cache": "lerna run --scope web clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rm -rf node_modules",
    "clean:all": "yarn clean:cache && yarn clean:workspaces && yarn clean:root",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "postinstall": "yarn bootstrap",
    "setup": "yarn install && yarn postinstall"
  },
  "devDependencies": {
    "@types/node": "13.7.7",
    "@types/react": "16.9.23",
    "@types/react-dom": "16.9.5",
    "@typescript-eslint/eslint-plugin": "2.21.0",
    "@typescript-eslint/parser": "2.21.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-react-hooks": "2.5.0",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{web,studio}/**/*.{ts,tsx,js,jsx}": [
      "eslint . --fix --quiet --ignore-path .gitignore",
      "prettier --write --quiet --ignore-path .gitignore"
    ]
  }
}

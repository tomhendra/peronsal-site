{
  "name": "personal-site",
  "description": "Monorepo for Tom Hendra's personal site",
  "author": "Tom Hendra <hola@tomhendra.dev>",
  "repository": "https://github.com/tomhendra/portfolio",
  "license": "MIT",
  "version": "3.0.0",
  "private": true,
  "workspaces": [
    "web",
    "studio"
  ],
  "scripts": {
    "start": "lerna run start --parallel",
    "build": "lerna run build --parallel",
    "format": "lerna run format --parallel",
    "lint": "tsc --noEmit && eslint '{web,studio}/**/*.{js,ts,tsx}' --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "test": "lerna run test",
    "deploy:graphql-dev": "lerna run --scope studio deploy:graphql-dev",
    "deploy:graphql-prod": "lerna run --scope studio deploy:graphql-prod",
    "deploy:sanity": "lerna run --scope studio deploy:sanity",
    "clean:cache": "lerna run --scope web clean",
    "clean:workspaces": "lerna clean",
    "clean:root": "rm -rf node_modules",
    "clean:lockfile": "rm -rf package-lock.json",
    "clean:all": "npm run clean:cache && npm run clean:workspaces && npm run clean:root && npm run clean:lockfile"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@types/facepaint": "^1.2.1",
    "@types/node": "14.14.34",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.2",
    "@types/react-helmet": "^6.1.0",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "5.1.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "{web,studio}/**/*.{js,ts,tsx}": "eslint --fix --quiet --ignore-path .gitignore"
  }
}

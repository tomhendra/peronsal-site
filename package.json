{
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm validate && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|ts|tsx|md)\"",
    "format:fix": "pnpm format --write \"**/*.+(js|jsx|ts|tsx|md)\"",
    "format:check": "pnpm format --list-different",
    "validate": "pnpm run \"/^(lint|format:check)$/\"",
    "postinstall": "pnpm husky",
    "clean:node_modules": "rm -rf node_modules"
  },
  "lint-staged": {
    "**/*.(ts|tsx|js)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.+(json|md|mdx)": [
      "prettier --write"
    ],
    "*": [
      "secretlint"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@flydotio/dockerfile": "^0.5.9",
    "@secretlint/secretlint-rule-preset-recommend": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "secretlint": "^9.0.0",
    "vite": "^6.0.9"
  },
  "dependencies": {
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
